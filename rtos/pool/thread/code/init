# pool_thread_init

pool = gpool.poolt
~ tx_semaphore_create(pool.sema, "OSA_Sema", 1) != 0 && exit(1)

pool.alloc_count = 0
pool.created_count = 0
pool.free_head = pool.nodes
pool.used_tail = null

node = pool.nodes
for i in 0..6:
  node.next = node + A8
  node.active = false
  memclear(node.name, 8)
  memclear(node, 94h)
  node = node.next
}
node.next = null

exit(0)
